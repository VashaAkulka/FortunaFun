<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#18253c"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="История игр"
            android:textSize="40dp"
            android:gravity="center">

        </TextView>
    </LinearLayout>

    <TableLayout
        android:id="@+id/historyTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_margin="16dp">

        <!-- Первая строка -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_1_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="3dp"/>

            <Button
                android:id="@+id/btn_1_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginRight="3dp"/>

            <Button
                android:id="@+id/btn_1_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginLeft="3dp"

                />
        </TableRow>

        <!-- Вторая строка -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_2_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/btn_2_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginRight="3dp"/>

            <Button
                android:id="@+id/btn_2_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginLeft="3dp"
                />
        </TableRow>

        <!-- Третья строка -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_3_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/btn_3_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_marginRight="3dp"/>

            <Button
                android:id="@+id/btn_3_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_marginLeft="3dp"/>
        </TableRow>

    </TableLayout>



</LinearLayout>
